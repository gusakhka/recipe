<?xml version="1.0" encoding="utf-8"?>
<ontology name="RecipeOntology">


	<sort name="cuisine" dynamic="true"/>
    <sort name="diet" dynamic="true"/>
    <sort name="intolerances" dynamic="true"/>
    <sort name="meal_type" dynamic="true"/>

    <predicate name="recipe" sort="string"/>
	<predicate name="query_search" sort="string"/>
